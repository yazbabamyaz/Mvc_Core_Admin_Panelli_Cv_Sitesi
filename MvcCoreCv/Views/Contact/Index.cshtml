@using MvcCoreCv.Entities
@model List<TblContact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body class="hold-transition sidebar-mini">


    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                </div>
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->

                        <div class="card-body">
                            

                            <!-- /.tab-pane -->
                            <div class="tab-pane" id="timeline">

                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {

                                        <!-- timeline time label -->
                                        <div class="time-label">
                                            <span class="bg-info">
                                                @(((DateTime)item.Date).ToString("dd-MMM-yyyy"))
                                            </span>
                                        </div>                                       
                                        <div>
                                            <i class="fas fa-comment bg-warning"></i>

                                            <div class="timeline-item">


                                                <span class="time"><i class="far fa-clock"></i> @item.Mail</span>
                                                <h3 class="timeline-header"><a href="#"> @item.FullName </a> [Konu:@item.Subject]</h3>
                                                <div class="timeline-body">
                                                   @item.Message
                                                </div>
                                                <div class="timeline-footer">
                                                    @*<a asp-controller="Award" asp-action="UpdateAward" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Düzenle</a>
                                                    <a asp-controller="Award" asp-action="DeleteAward" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>*@
                                                </div>
                                            </div>
                                        </div>


                                    }
                                </div>
                                <!-- The timeline -->

                            </div>

                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

    </section>

</body>

